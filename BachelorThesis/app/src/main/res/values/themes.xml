<resources>
    <!-- Base application theme. -->
    <style name="Theme.BachelorThesis" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

<!--        <item name="fontFamily">@font/lora_family</item>-->
<!--        <item name="android:fontFamily">@font/lora_family</item>-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_medium</item>
        <item name="colorSecondaryVariant">@color/yellow_medium</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
<!--        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>-->
        <item name="android:checkBoxPreferenceStyle">@style/CheckboxStyle</item>
        <!-- For  toolbar menu items -->
        <item name="android:actionMenuTextColor">@color/purple_dark</item>
        <item name="actionMenuTextColor">@color/purple_dark</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lora</item>
    </style>


    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/istok_web_bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/istok_web</item>
    </style>

<!--    <style name="SpinnerItemStyle" parent="android:Widget.Spinner">-->
<!--        <item name="android:fontFamily">@font/istok_web</item>-->
<!--    </style>-->

    <style name="CheckboxStyle">
        <item name="android:fontFamily">@font/istok_web</item>
    </style>

    <style name="Theme.BachelorThesis.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:actionMenuTextColor">@color/purple_dark</item>
        <item name="actionMenuTextColor">@color/purple_dark</item>
    </style>

    <style name="AppBarPage">
        <item name="android:fontFamily">@font/rosemate_script</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppBarSubpage">
        <item name="android:fontFamily">@font/istok_web</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.BachelorThesis.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BachelorThesis.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>