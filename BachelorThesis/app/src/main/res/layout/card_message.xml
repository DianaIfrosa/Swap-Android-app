<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="message"
            type="com.diana.bachelorthesis.model.Message" />

        <variable
            name="messageClickListener"
            type="com.diana.bachelorthesis.utils.CustomClickListener" />

    </data>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="15dp"
            android:onClick="@{() -> messageClickListener.cardClicked(message)}">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:textSize="15sp"
                android:background="@drawable/background_message_card"
                android:textColor="@color/black"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/message_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


</layout>